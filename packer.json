{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "provisioners": [
    {
        "type": "shell",
         "inline": [
            "/usr/bin/yum -y update",
            "/usr/bin/curl -L https://omnitruck.chef.io/install.sh | sudo bash",            
        ]
    },
    
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ami-6871a115",
        "root-device-type": "ebs"
      },
      "most_recent": true``
    },
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "cheftest01 {{timestamp}}",
  }]
}
