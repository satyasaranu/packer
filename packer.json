{
  "variables": {
    "ami_name": "",
    "region": ""   
  },

  
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `region`}}",
    "source_ami": "{{user `ami_name`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "cheftest01 {{timestamp}}"
    }],

    "provisioners": [ {
          "type": "shell",
           "inline": [
              "sudo /usr/bin/yum -y update",
              "sudo /usr/bin/yum -y install wget",
              "sudo /usr/bin/curl -L https://omnitruck.chef.io/install.sh | sudo bash",
              "sudo mkdir /cookbooks; cd /cookbooks",
              "sudo /usr/bin/wget https://supermarket.chef.io/cookbooks/motd/download",
              "sudo ls -l ",
               "sudo chef-cleint --local-mode"
                         
    ]
  }
]
}

      
 